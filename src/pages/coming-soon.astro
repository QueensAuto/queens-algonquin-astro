---
import BaseLayout from "../layouts/BaseLayout.astro";
import { mobileTiresBrand } from "../brands";

const title = "Coming Soon | Queens Auto Service";
const description =
    "Something exciting is coming to Queens Auto Service. Stay tuned for updates!";
---

<BaseLayout brand={mobileTiresBrand} title={title} description={description}>
    <main
        class="min-h-[80vh] flex items-center justify-center relative overflow-hidden bg-white dark:bg-queens-black transition-colors duration-500"
    >
        <!-- Animated background elements -->
        <div class="absolute inset-0 pointer-events-none">
            <div
                class="absolute top-1/4 left-1/4 w-96 h-96 bg-queens-primary/10 dark:bg-queens-primary/20 rounded-full blur-[120px] animate-pulse"
            >
            </div>
            <div
                class="absolute bottom-1/4 right-1/4 w-[500px] h-[500px] bg-queens-secondary-medium-dark/5 dark:bg-queens-secondary-medium-dark/10 rounded-full blur-[150px] animate-pulse"
                style="animation-delay: 1s;"
            >
            </div>
        </div>

        <div class="site-canvas relative z-10 text-center">
            <div class="max-w-3xl mx-auto">
                <span
                    class="inline-block px-4 py-1.5 rounded-full bg-queens-primary/5 dark:bg-queens-primary/10 border border-queens-primary/20 text-queens-primary text-xs font-bold tracking-[0.2em] uppercase mb-8 animate-fade-in shadow-sm dark:shadow-none"
                >
                    Excitement Loading
                </span>

                <h1
                    class="font-display text-slate-900 dark:text-white text-6xl md:text-8xl lg:text-9xl font-bold leading-none mb-8"
                >
                    COMING <br class="hidden sm:block" />
                    <span class="text-queens-primary">SOON</span>
                </h1>

                <p
                    class="text-slate-600 dark:text-slate-400 text-lg md:text-xl max-w-xl mx-auto leading-relaxed mb-12"
                >
                    We're currently fine-tuning this page to provide you with
                    the best experience possible. Check back shortly for
                    something amazing.
                </p>

                <div
                    class="flex flex-col sm:flex-row items-center justify-center gap-6"
                >
                    <a
                        href="/"
                        class="px-8 py-4 bg-queens-primary text-white font-bold uppercase tracking-wider rounded-full hover:bg-queens-primary/90 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-[0_10px_40px_-10px_rgba(10,121,200,0.5)]"
                    >
                        Back to Home
                    </a>
                    <a
                        href="/contact"
                        class="px-8 py-4 bg-transparent border border-slate-200 dark:border-white/20 text-slate-900 dark:text-white font-bold uppercase tracking-wider rounded-full hover:border-queens-primary hover:bg-queens-primary/5 transition-all duration-300"
                    >
                        Contact Us
                    </a>
                </div>
            </div>
        </div>
    </main>
</BaseLayout>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.8s ease-out forwards;
    }

    /* Custom animation for display font letters if needed */
    h1 span {
        display: inline-block;
        position: relative;
        /* Optional: reflection effect */
        -webkit-box-reflect: below -20px
            linear-gradient(transparent, rgba(0, 0, 0, 0.1));
    }
</style>
