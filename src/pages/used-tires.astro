---
import BaseLayout from "../layouts/BaseLayout.astro";
import { mobileTiresBrand } from "../brands";

const title = `Used Tires | ${mobileTiresBrand.name}`;
const description =
    "Quality used tires at affordable prices, delivered and installed at your location.";
---

<BaseLayout brand={mobileTiresBrand} title={title}>
    <div class="py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2
                    class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
                >
                    Quality Used Tires
                </h2>
                <p
                    class="mt-2 text-lg leading-8 text-gray-600 dark:text-gray-300"
                >
                    Save money without compromising safety. Call us for our
                    current used tire inventory.
                </p>
                <div class="mt-10 flex items-center justify-center gap-x-6">
                    <a
                        href="/contact"
                        class="rounded-md bg-queens-primary px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-queens-primary/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-queens-primary"
                        >Check Inventory</a
                    >
                    <a
                        href={`tel:${mobileTiresBrand.phone.replace(/\D/g, "")}`}
                        class="text-sm font-semibold leading-6 text-gray-900 dark:text-white"
                        >Call {mobileTiresBrand.phone} <span aria-hidden="true">&rarr;</span></a
                    >
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
