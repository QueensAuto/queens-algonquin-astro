---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CtaButton from "../../components/CtaButton.astro";
---

<BaseLayout title="Auto Repair Near Algonquin Commons | Queens Auto Services">
    <section class="pt-32 pb-16 md:pt-40 md:pb-20 lg:pb-24 overflow-hidden">
        <div class="site-canvas">
            <div class="max-w-3xl mx-auto text-center">
                <!-- Breadcrumbs -->
                <nav
                    class="text-sm font-medium text-gray-500 mb-6"
                    aria-label="Breadcrumb"
                >
                    <ol class="inline-flex items-center space-x-2 md:space-x-3">
                        <li class="inline-flex items-center">
                            <a
                                href="/"
                                class="hover:text-amber-600 transition-colors"
                                >Home</a
                            >
                        </li>
                        <li aria-current="page">
                            <div class="flex items-center">
                                <span class="mx-2">/</span>
                                <span class="text-gray-900 dark:text-white"
                                    >Algonquin Commons</span
                                >
                            </div>
                        </li>
                    </ol>
                </nav>

                <h1
                    class="display-hero-page text-queens-primary dark:text-white mb-6"
                >
                    <span class="text-queens-secondary">Auto Repair Near</span> Algonquin
                    Commons
                </h1>
                <p
                    class="text-lg text-gray-600 dark:text-gray-300 mb-8 leading-relaxed"
                >
                    Shopping at the Algonquin Commons? Drop your car off at
                    Queens Auto Services. We are located just minutes away,
                    providing top-rated auto repair, tire sales, and oil changes
                    while you shop.
                </p>
                <CtaButton
                    href="/request-an-appointment"
                    text="Schedule Service"
                />
            </div>
        </div>
    </section>

    <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-900/50">
        <div class="site-canvas">
            <div
                class="grid md:grid-cols-2 gap-12 items-center max-w-5xl mx-auto"
            >
                <div>
                    <h2
                        class="text-3xl font-black mb-6 text-gray-900 dark:text-white"
                    >
                        Convenient Location off Randall Rd
                    </h2>
                    <p class="text-gray-700 dark:text-gray-300 mb-4">
                        If you are running errands at the Algonquin Commons or
                        spending the day shopping with family, taking care of
                        your vehicle's maintenance should be hassle-free.
                    </p>
                    <p class="text-gray-700 dark:text-gray-300 mb-6">
                        Simply take Randall Road to our shop. We offer fast
                        turnaround times for routine services like oil changes
                        and tire rotations, and we provide transparent digital
                        inspections for larger repairs.
                    </p>
                    <ul class="space-y-3">
                        <li
                            class="flex items-center text-gray-800 dark:text-gray-200 font-medium"
                        >
                            <svg
                                class="w-5 h-5 text-amber-500 mr-2"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                ><path
                                    fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                    clip-rule="evenodd"></path></svg
                            >
                            Drop-off while you shop
                        </li>
                        <li
                            class="flex items-center text-gray-800 dark:text-gray-200 font-medium"
                        >
                            <svg
                                class="w-5 h-5 text-amber-500 mr-2"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                ><path
                                    fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                    clip-rule="evenodd"></path></svg
                            >
                            ASE Certified Technicians
                        </li>
                        <li
                            class="flex items-center text-gray-800 dark:text-gray-200 font-medium"
                        >
                            <svg
                                class="w-5 h-5 text-amber-500 mr-2"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                                ><path
                                    fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                    clip-rule="evenodd"></path></svg
                            >
                            Digital Vehicle Inspections sent to your phone
                        </li>
                    </ul>
                </div>
                <div
                    class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg border border-gray-100 dark:border-gray-700"
                >
                    <h3 class="text-2xl font-bold mb-4">
                        Most Popular Services
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <a
                            href="/brake-shop-algonquin"
                            class="block p-4 border border-gray-100 dark:border-gray-700 rounded-xl hover:border-amber-500 transition-colors text-center font-bold"
                            >Brake Repair</a
                        >
                        <a
                            href="/tire-shop-algonquin"
                            class="block p-4 border border-gray-100 dark:border-gray-700 rounded-xl hover:border-amber-500 transition-colors text-center font-bold"
                            >New Tires</a
                        >
                        <a
                            href="/oil-change-service-algonquin"
                            class="block p-4 border border-gray-100 dark:border-gray-700 rounded-xl hover:border-amber-500 transition-colors text-center font-bold"
                            >Oil Changes</a
                        >
                        <a
                            href="/mechanic-algonquin/check-engine-light"
                            class="block p-4 border border-gray-100 dark:border-gray-700 rounded-xl hover:border-amber-500 transition-colors text-center font-bold"
                            >Diagnostics</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
