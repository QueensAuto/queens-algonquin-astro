---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CtaButton from "../../components/CtaButton.astro";
---

<BaseLayout title="Auto Repair Carpentersville IL | Queens Auto Services">
    <section class="pt-32 pb-16 md:pt-40 md:pb-20 lg:pb-24 overflow-hidden">
        <div class="site-canvas">
            <div class="max-w-3xl mx-auto text-center">
                <!-- Breadcrumbs -->
                <nav
                    class="text-sm font-medium text-gray-500 mb-6"
                    aria-label="Breadcrumb"
                >
                    <ol class="inline-flex items-center space-x-2 md:space-x-3">
                        <li class="inline-flex items-center">
                            <a
                                href="/"
                                class="hover:text-amber-600 transition-colors"
                                >Home</a
                            >
                        </li>
                        <li aria-current="page">
                            <div class="flex items-center">
                                <span class="mx-2">/</span>
                                <span class="text-gray-900 dark:text-white"
                                    >Carpentersville</span
                                >
                            </div>
                        </li>
                    </ol>
                </nav>

                <h1
                    class="display-hero-page text-queens-primary dark:text-white mb-6"
                >
                    <span class="text-queens-secondary"
                        >Mechanic & Tire Shop</span
                    > for Carpentersville Drivers
                </h1>
                <p
                    class="text-lg text-gray-600 dark:text-gray-300 mb-8 leading-relaxed"
                >
                    Looking for a reliable mechanic just minutes from
                    Carpentersville? Queens Auto Services provides expert
                    automotive diagnostics, suspension repair, and tire deals
                    just across the border in Algonquin.
                </p>
                <CtaButton
                    href="/request-an-appointment"
                    text="Schedule Your Visit"
                />
            </div>
        </div>
    </section>

    <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-900/50">
        <div class="site-canvas">
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div
                    class="lg:col-span-2 bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700"
                >
                    <h2
                        class="text-3xl font-black mb-6 text-gray-900 dark:text-white"
                    >
                        Your Trusted Shop on the Border
                    </h2>
                    <p class="text-gray-700 dark:text-gray-300 mb-4">
                        Located conveniently off Route 62, Queens Auto Services
                        is the premier choice for Carpentersville residents who
                        want honest, high-quality mechanic work without
                        dealership markups.
                    </p>
                    <p class="text-gray-700 dark:text-gray-300 mb-8">
                        Whether you need a massive repair like head gaskets and
                        alternators, or routine maintenance like oil changes and
                        wheel alignments, our ASE-certified technicians have the
                        tools and experience to fix it right the first time.
                    </p>
                    <a
                        href="/about"
                        class="inline-flex items-center text-amber-600 dark:text-amber-400 font-bold hover:underline"
                    >
                        Learn more about our family-owned shop
                        <svg
                            class="w-5 h-5 ml-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                        >
                    </a>
                </div>

                <div
                    class="bg-gray-900 p-8 rounded-2xl shadow-lg border border-gray-800 text-white"
                >
                    <h3 class="text-xl font-bold mb-6 text-amber-500">
                        Popular Services
                    </h3>
                    <ul class="space-y-4">
                        <li>
                            <a
                                href="/mechanic-algonquin/check-engine-light"
                                class="flex items-center hover:text-amber-400 transition-colors"
                                ><svg
                                    class="w-5 h-5 mr-3 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 5l7 7-7 7"></path></svg
                                > Computer Diagnostics</a>
                        </li>
                        <li>
                            <a
                                href="/tire-shop-algonquin/wheel-alignment"
                                class="flex items-center hover:text-amber-400 transition-colors"
                                ><svg
                                    class="w-5 h-5 mr-3 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 5l7 7-7 7"></path></svg
                                > Laser Wheel Alignment</a>
                        </li>
                        <li>
                            <a
                                href="/mechanic-algonquin/alternator-replacement"
                                class="flex items-center hover:text-amber-400 transition-colors"
                                ><svg
                                    class="w-5 h-5 mr-3 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 5l7 7-7 7"></path></svg
                                > Alternator / Battery</a>
                        </li>
                        <li>
                            <a
                                href="/auto-air-conditioning-service-algonquin"
                                class="flex items-center hover:text-amber-400 transition-colors"
                                ><svg
                                    class="w-5 h-5 mr-3 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 5l7 7-7 7"></path></svg
                                > A/C Recharge & Repair</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
