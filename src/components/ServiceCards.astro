---
const services = [
  {
    title: "Price Per Axle",
    subtitle: "$369 BRAKE SPECIAL",
    description: "Professional brake pad and rotor inspection with complete brake service. Includes quality parts, labor, and a comprehensive safety check.",
    image: "/images/services/Changing brakes.webp",
    alt: "Professional Brake System Service",
    link: "https://brakes.queensautoservices.com/"
  },
  {
    title: "Limited Time Offer",
    subtitle: "$35 OFF ALIGNMENT",
    description: "Precision 4-wheel alignment using state-of-the-art equipment. Extend tire life and improve fuel efficiency with proper alignment.",
    image: "/images/services/Wheel-Alignment-Algonquin-001.webp",
    alt: "Wheel Alignment Special Offer",
    link: "https://queensautoservices.com/wheel-alignment/special-offer.htm"
  },
  {
    title: "General Repair",
    subtitle: "$100 OFF SERVICES",
    description: "Save on engine diagnostics, transmission work, electrical repairs, and more. First-time customers get an extra discount!",
    image: "/images/services/Queens-Auto-Services-Auto-Repair-Slider-007.webp",
    alt: "General Repair Discount",
    link: "https://offer.queensautoservices.com/"
  }
];
---

<section id="homepage-deals" class="deals-section">
  <div class="deals-pin-wrapper">
    <div class="deals-container site-canvas">
      <!-- Sticky Number Column (Left) -->
      <div class="deals-number-column">
        <span class="deals-number" id="deals-active-number">01</span>
        <div class="deals-progress-dots">
          {services.map((_, i) => (
            <div 
              class={`deals-dot ${i === 0 ? 'active' : ''}`}
              data-index={i}
            />
          ))}
        </div>
      </div>

      <!-- Slides Container (Right) -->
      <div class="deals-slides-viewport">
        <div class="deals-slides-track">
          {services.map((service, index) => (
            <div 
              class={`deals-slide ${index === 0 ? 'active' : ''}`}
              data-index={index}
            >
              <!-- Text Content -->
              <div class="deals-slide-content">
                <span class="deals-slide-eyebrow">
                  {service.title}
                </span>
                <h3 class="deals-slide-title">
                  {service.subtitle}
                </h3>
                <p class="deals-slide-description">
                  {service.description}
                </p>
                <a 
                  href={service.link}
                  class="deals-slide-cta"
                >
                  <span>Claim Offer</span>
                  <svg class="cta-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
              </div>

              <!-- Image -->
              <div class="deals-slide-image-wrapper">
                <img 
                  src={service.image} 
                  alt={service.alt}
                  class="deals-slide-image"
                  loading={index === 0 ? "eager" : "lazy"}
                />
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .deals-section {
    position: relative;
    background-color: var(--color-page);
    z-index: 20;
  }

  .deals-pin-wrapper {
    min-height: 100vh;
    background-color: var(--color-page);
    position: relative;
    z-index: 20;
  }

  .deals-container {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: 4rem;
    min-height: 100vh;
    align-items: center;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  @media (max-width: 1023px) {
    .deals-container {
      grid-template-columns: 80px 1fr;
      gap: 2rem;
    }
  }

  @media (max-width: 640px) {
    .deals-container {
      grid-template-columns: 1fr;
      padding-top: 2rem;
      gap: 1rem;
    }
    
    /* On mobile, keep it in flow but compact */
    .deals-number-column {
      position: relative;
      top: auto;
      left: auto;
      margin-bottom: -1rem; /* Tighten up spacing to content */
      z-index: 10;
    }
  }

  /* Number Column */
  .deals-number-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem; /* Reduced gap */
  }

  .deals-number {
    font-family: var(--font-display);
    /* Significantly reduced size */
    font-size: clamp(4rem, 10vw, 7rem); 
    font-weight: 900;
    line-height: 0.85;
    color: #0f172a;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  :global(.dark) .deals-number {
    color: #f8fafc;
  }

  /* Progress Dots */
  .deals-progress-dots {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-left: 0.5rem;
  }

  .deals-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #cbd5e1;
    transition: all 0.4s ease;
  }

  :global(.dark) .deals-dot {
    background-color: #475569;
  }

  .deals-dot.active {
    background-color: var(--queens-primary);
    transform: scale(1.4);
  }

  /* Slides Viewport */
  .deals-slides-viewport {
    position: relative;
    overflow: hidden;
  }

  .deals-slides-track {
    position: relative;
    min-height: 60vh;
  }

  /* Individual Slide - CSS-powered smooth transitions */
  .deals-slide {
    display: grid;
    grid-template-columns: 1fr 1.3fr;
    gap: 3rem;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    z-index: 1;
    transition: 
      opacity 0.5s cubic-bezier(0.25, 0.1, 0.25, 1),
      visibility 0.5s cubic-bezier(0.25, 0.1, 0.25, 1);
    will-change: opacity;
  }

  .deals-slide.active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    z-index: 5;
  }

  @media (max-width: 1023px) {
    .deals-slide {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .deals-slides-track {
      min-height: 500px;
    }
  }

  /* Slide Content - staggered CSS animations */
  .deals-slide-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .deals-slide-eyebrow {
    font-family: var(--font-serif);
    font-style: italic;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--queens-primary);
    line-height: 1.2;
    opacity: 0;
    transform: translateY(15px);
    transition: 
      opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.1s,
      transform 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.1s;
  }

  .deals-slide.active .deals-slide-eyebrow {
    opacity: 1;
    transform: translateY(0);
  }

  .deals-slide-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    text-transform: uppercase;
    color: #0f172a;
    line-height: 1;
    margin: 0.5rem 0 1rem;
    opacity: 0;
    transform: translateY(15px);
    transition: 
      opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.15s,
      transform 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.15s;
  }

  .deals-slide.active .deals-slide-title {
    opacity: 1;
    transform: translateY(0);
  }

  :global(.dark) .deals-slide-title {
    color: #f8fafc;
  }

  .deals-slide-description {
    font-size: 1.125rem;
    color: #64748b;
    line-height: 1.7;
    max-width: 400px;
    margin-bottom: 1.5rem;
    opacity: 0;
    transform: translateY(15px);
    transition: 
      opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.2s,
      transform 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.2s;
  }

  .deals-slide.active .deals-slide-description {
    opacity: 1;
    transform: translateY(0);
  }

  :global(.dark) .deals-slide-description {
    color: #94a3b8;
  }

  .deals-slide-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--queens-primary);
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0;
    transform: translateY(15px);
    transition: 
      opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.25s,
      transform 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.25s,
      gap 0.3s ease;
  }

  .deals-slide.active .deals-slide-cta {
    opacity: 1;
    transform: translateY(0);
  }

  .deals-slide-cta:hover {
    gap: 0.75rem;
  }

  .cta-arrow {
    width: 1rem;
    height: 1rem;
    transition: transform 0.3s ease;
  }

  .deals-slide-cta:hover .cta-arrow {
    transform: translateX(4px);
  }

  /* Slide Image - smooth entrance */
  .deals-slide-image-wrapper {
    position: relative;
    border-radius: 1.5rem;
    overflow: hidden;
    aspect-ratio: 4/3;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
    opacity: 0;
    transform: translateX(30px) scale(0.98);
    transition: 
      opacity 0.7s cubic-bezier(0.4, 0, 0.2, 1) 0.1s,
      transform 0.7s cubic-bezier(0.4, 0, 0.2, 1) 0.1s;
    will-change: opacity, transform;
  }

  .deals-slide.active .deals-slide-image-wrapper {
    opacity: 1;
    transform: translateX(0) scale(1);
  }

  :global(.dark) .deals-slide-image-wrapper {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
  }

  .deals-slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }

  .deals-slide:hover .deals-slide-image {
    transform: scale(1.05);
  }
</style>


<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  let dealsCtx: any = null;
  let currentSlideIndex = 0;

  function initDealsSlider() {
    if (dealsCtx) dealsCtx.revert();

    dealsCtx = gsap.context(() => {
      const section = document.querySelector("#homepage-deals");
      const pinWrapper = document.querySelector(".deals-pin-wrapper");
      if (!section || !pinWrapper) return;

      const slides = section.querySelectorAll(".deals-slide") as NodeListOf<HTMLElement>;
      const numberEl = document.getElementById("deals-active-number");
      const dots = section.querySelectorAll(".deals-dot");
      const slideCount = slides.length;

      if (!slides.length) return;

      // Reset current slide index
      currentSlideIndex = 0;

      // Initialize slides - first is active
      slides.forEach((slide, i) => {
        if (i === 0) {
          slide.classList.add("active");
        } else {
          slide.classList.remove("active");
        }
      });

      // Initialize dots
      dots.forEach((dot, i) => {
        dot.classList.toggle("active", i === 0);
      });

      // Calculate total scroll distance (100vh per slide)
      const totalScrollHeight = window.innerHeight * slideCount;

      // Simple transition function - just toggle classes, CSS handles the rest
      function transitionToSlide(newIndex: number) {
        if (newIndex === currentSlideIndex || newIndex < 0 || newIndex >= slideCount) return;

        // Update slides - just toggle active class
        slides.forEach((slide, i) => {
          slide.classList.toggle("active", i === newIndex);
        });

        // Update number with a simple fade
        if (numberEl) {
          numberEl.style.transition = "opacity 0.2s ease, transform 0.2s ease";
          numberEl.style.opacity = "0";
          numberEl.style.transform = "translateY(-10px)";
          
          setTimeout(() => {
            if (numberEl) {
              numberEl.textContent = String(newIndex + 1).padStart(2, '0');
              numberEl.style.opacity = "1";
              numberEl.style.transform = "translateY(0)";
            }
          }, 200);
        }

        // Update dots - just toggle active class
        dots.forEach((dot, i) => {
          dot.classList.toggle("active", i === newIndex);
        });

        currentSlideIndex = newIndex;
      }

      // Set up the pinned scroll
      ScrollTrigger.create({
        trigger: section,
        start: "top top",
        end: `+=${totalScrollHeight}`,
        pin: pinWrapper,
        scrub: 0.8,
        onUpdate: (self) => {
          const progress = self.progress;
          const targetIndex = Math.min(
            Math.floor(progress * slideCount),
            slideCount - 1
          );

          if (targetIndex !== currentSlideIndex) {
            transitionToSlide(targetIndex);
          }
        }
      });

    });
  }

  document.addEventListener("astro:page-load", () => {
    setTimeout(initDealsSlider, 300);
  });

  document.addEventListener("astro:before-swap", () => {
    if (dealsCtx) dealsCtx.revert();
  });
</script>


