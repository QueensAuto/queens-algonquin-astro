---
import ThemeToggle from "./ThemeToggle.astro";
import CtaButton from "./CtaButton.astro";
import AnnouncementBar from "./AnnouncementBar.astro";
import type { BrandConfig } from "../brands";

const { brand, inverse = false } = Astro.props as {
  brand: BrandConfig;
  inverse?: boolean;
};

const nameParts = brand.name.split(" ");
const firstName = nameParts[0];
const secondName = nameParts.length > 1 ? nameParts[1] : "";
---

<!-- Smart Reveal ServicesHeader -->
<div
  id="header-wrapper-services"
  class="fixed top-0 left-0 right-0 z-[100] pointer-events-none transition-all duration-500 ease-premium flex flex-col"
>
  <AnnouncementBar class="relative z-[101] w-full pointer-events-auto" />

  <div
    id="header-inner-services"
    class="w-full p-3 md:p-6 transition-all duration-500 ease-premium pointer-events-none"
  >
    <!-- Glass Background Layer -->
    <div
      id="header-glass-services"
      class="absolute inset-0 opacity-0 backdrop-blur-xl transition-all duration-500 pointer-events-none border-b border-transparent"
    >
    </div>

    <div
      class="mx-auto max-w-[1400px] w-full flex items-center justify-between relative z-10"
    >
      <!-- LEFT: Hamburger + Logo (Clean, No Pill) -->
      <div
        id="header-left-section-services"
        class="pointer-events-auto flex items-center gap-3"
      >
        <!-- Hamburger Button (Locked White for dark backgrounds) -->
        <button
          id="mobile-menu-button-services"
          class="group flex items-center justify-center w-10 h-10 rounded-full text-white hover:bg-white/10 transition-colors"
          aria-label="Toggle Menu"
        >
          <div id="hamburger-icon-services" class="relative w-5 h-3.5">
            <span
              class="hamburger-line-services absolute top-0 left-0 w-full h-0.5 bg-current rounded-full"
            ></span>
            <span
              class="hamburger-line-services absolute top-1/2 left-0 w-full h-0.5 bg-current rounded-full -translate-y-1/2"
            ></span>
            <span
              class="hamburger-line-services absolute bottom-0 left-0 w-full h-0.5 bg-current rounded-full"
            ></span>
          </div>
        </button>

        <!-- Logo (Locked White Version for dark backgrounds) -->
        <a href="/" id="header-logo-services" class="flex items-center gap-2">
          {
            brand.logoPathWhite ? (
              <img
                id="logo-white-services"
                src={brand.logoPathWhite}
                alt={brand.name}
                class="h-7 md:h-8 w-auto object-contain block"
              />
            ) : (
              <span class="text-lg font-bold tracking-tighter uppercase text-white">
                {firstName}{" "}
                <span class="text-queens-secondary">{secondName}</span>
              </span>
            )
          }
        </a>
      </div>

      <!-- RIGHT ACTIONS: Phone + CTA + Theme Toggle -->
      <div class="pointer-events-auto flex items-center gap-6 md:gap-8">
        <!-- Phone Number (Locked White for dark backgrounds) -->
        <a
          id="header-phone-services"
          href={`tel:${brand.phone}`}
          class="nav-phone-link hidden md:flex items-center gap-2 text-white transition-colors"
        >
          <span class="text-sm font-black uppercase tracking-[0.15em]"
            >Call {brand.phone}</span
          >
        </a>

        <!-- Theme Toggle (Inverse forced for visibility) -->
        <ThemeToggle inverse={true} />

        <!-- CTA Button (Desktop Only) -->
        <div class="hidden md:block">
          <CtaButton href="/request-an-appointment" text="Book Now" />
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Full Screen Menu Overlay - z-[90] so header stays ABOVE it -->
<div
  id="mobile-menu-services"
  class="fixed inset-0 z-[90] hidden"
  aria-hidden="true"
>
  <!-- Background Image + Dark Overlay -->
  <div id="menu-bg-overlay-services" class="absolute inset-0 opacity-0">
    <!-- Background Image -->
    <img
      src="/images/services/Hero-mechanic-fixing-car-on-lift-copy.webp"
      alt=""
      class="absolute inset-0 w-full h-full object-cover"
    />
    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-queens-dark/85"></div>
  </div>

  <!-- Menu Content Panel -->
  <div
    id="menu-content-panel-services"
    class="absolute inset-0 flex items-center justify-center opacity-0 translate-y-8"
  >
    <!-- Centered Menu Card -->
    <div
      class="w-full max-w-2xl mx-6 p-8 md:p-12 rounded-2xl bg-queens-primary shadow-2xl"
    >
      <!-- 2-Column Link Grid -->
      <nav class="grid grid-cols-2 gap-x-8 gap-y-6">
        {
          [
            { label: "Home", href: "/" },
            { label: "Services", href: "/services" },
            { label: "New Tires", href: "/buy-new-tires", reload: true },
            { label: "Deals", href: "/deals" },
            { label: "About Us", href: "/about" },
            { label: "Contact", href: "/contact" },
          ].map((item) => (
            <a
              href={item.href}
              data-astro-reload={item.reload || undefined}
              class="menu-link-services text-xl md:text-2xl font-bold text-white uppercase tracking-wide hover:opacity-70 transition-opacity duration-200"
            >
              {item.label}
            </a>
          ))
        }
      </nav>

      <!-- Mobile CTA -->
      <div class="mt-10 flex justify-center md:hidden">
        <CtaButton href="/request-an-appointment" text="Book Appointment" />
      </div>
    </div>
  </div>
</div>

<script>
  import { gsap } from "gsap";

  function setupHeaderServices() {
    const wrapper = document.getElementById("header-wrapper-services");
    const inner = document.getElementById("header-inner-services");
    const glass = document.getElementById("header-glass-services");
    const menuBtn = document.getElementById("mobile-menu-button-services");
    const menu = document.getElementById("mobile-menu-services");
    const bgOverlay = document.getElementById("menu-bg-overlay-services");
    const contentPanel = document.getElementById("menu-content-panel-services");
    const hamburgerLines = document.querySelectorAll(
      ".hamburger-line-services",
    );

    if (!wrapper || !menuBtn || !menu || !bgOverlay || !contentPanel || !glass)
      return;

    let lastScrollY = window.scrollY;
    let isHidden = false;
    let isScrolled = false;

    // --- Scroll Logic (Hide/Show + Glass) ---
    const handleScroll = () => {
      const currentScrollY = window.scrollY;

      // 1. Manage Glass State
      if (currentScrollY > 50) {
        if (!isScrolled) {
          isScrolled = true;
          // Apply glass styles (Always dark-ish for services header to pop white text)
          glass.classList.add("opacity-100");
          glass.classList.remove("opacity-0");
          glass.classList.add("border-white/10", "bg-black/40");
          if (inner) {
            inner.classList.remove("p-3", "md:p-6");
            inner.classList.add("p-2", "md:p-4");
          }
        }
      } else {
        if (isScrolled) {
          isScrolled = false;
          glass.classList.add("opacity-0");
          glass.classList.remove("opacity-100");
          glass.classList.remove("border-white/10", "bg-black/40");
          if (inner) {
            inner.classList.add("p-3", "md:p-6");
            inner.classList.remove("p-2", "md:p-4");
          }
        }
      }

      // 2. Hide/Show Logic
      if (currentScrollY > lastScrollY && currentScrollY > 150 && !isOpen) {
        // Scrolling Down - Hide
        if (!isHidden) {
          isHidden = true;
          gsap.to(wrapper, {
            yPercent: -100,
            duration: 0.4,
            ease: "power2.inOut",
          });
        }
      } else {
        // Scrolling Up - Show
        if (isHidden) {
          isHidden = false;
          gsap.to(wrapper, {
            yPercent: 0,
            duration: 0.5,
            ease: "power4.out",
          });
        }
      }

      lastScrollY = currentScrollY;
    };

    window.addEventListener("scroll", handleScroll, { passive: true });

    let isOpen = false;
    let isAnimating = false;

    // --- Menu Open/Close ---
    const openMenu = () => {
      if (isAnimating) return;
      isAnimating = true;
      isOpen = true;
      menu.classList.remove("hidden");
      document.body.style.overflow = "hidden";

      const tl = gsap.timeline({
        onComplete: () => {
          isAnimating = false;
        },
      });

      // Hamburger to X
      tl.to(
        hamburgerLines[0],
        {
          rotate: 45,
          y: 7,
          transformOrigin: "center center",
          duration: 0.3,
          ease: "power2.out",
        },
        0,
      )
        .to(hamburgerLines[1], { scaleX: 0, opacity: 0, duration: 0.2 }, 0)
        .to(
          hamburgerLines[2],
          {
            rotate: -45,
            y: -7,
            transformOrigin: "center center",
            duration: 0.3,
            ease: "power2.out",
          },
          0,
        );

      // Background fade in
      tl.to(bgOverlay, { opacity: 1, duration: 0.5, ease: "power2.out" }, 0);

      // Content panel reveal
      tl.to(
        contentPanel,
        { opacity: 1, y: 0, duration: 0.6, ease: "power4.out" },
        0.2,
      );

      // Stagger menu links
      tl.fromTo(
        ".menu-link-services",
        { opacity: 0, y: 20 },
        {
          opacity: 1,
          y: 0,
          stagger: 0.05,
          duration: 0.4,
          ease: "power2.out",
        },
        0.3,
      );
    };

    const closeMenu = () => {
      if (isAnimating) return;
      isAnimating = true;
      isOpen = false;

      const tl = gsap.timeline({
        onComplete: () => {
          menu.classList.add("hidden");
          document.body.style.overflow = "";
          isAnimating = false;
        },
      });

      // Menu links fade out
      tl.to(
        ".menu-link-services",
        { opacity: 0, y: -10, stagger: 0.02, duration: 0.2 },
        0,
      );

      // Content panel hide
      tl.to(
        contentPanel,
        { opacity: 0, y: -20, duration: 0.3, ease: "power2.in" },
        0.1,
      );

      // Background fade out
      tl.to(bgOverlay, { opacity: 0, duration: 0.4, ease: "power2.in" }, 0.15);

      // X back to Hamburger
      tl.to(
        hamburgerLines[0],
        { rotate: 0, y: 0, duration: 0.3, ease: "power2.out" },
        0.2,
      )
        .to(hamburgerLines[1], { scaleX: 1, opacity: 1, duration: 0.2 }, 0.25)
        .to(
          hamburgerLines[2],
          { rotate: 0, y: 0, duration: 0.3, ease: "power2.out" },
          0.2,
        );
    };

    const toggleMenu = () => {
      if (isOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    };

    menuBtn.addEventListener("click", toggleMenu);

    // Click outside to close (handles clicks on both the background and the empty flex container)
    const handleOutsideClick = (e: any) => {
      if (isOpen && (e.target === bgOverlay || e.target === contentPanel)) {
        closeMenu();
      }
    };

    bgOverlay.addEventListener("click", handleOutsideClick);
    contentPanel.addEventListener("click", handleOutsideClick);

    // Link clicks - close immediately and navigate
    menu.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        if (isOpen) {
          // Reset instantly for navigation
          isOpen = false;
          document.body.style.overflow = "";
          gsap.set(menu, { display: "none" });
          gsap.set(bgOverlay, { opacity: 0 });
          gsap.set(contentPanel, { opacity: 0, y: 8 });
          gsap.set(hamburgerLines[0], { rotate: 0, y: 0 });
          gsap.set(hamburgerLines[1], { scaleX: 1, opacity: 1 });
          gsap.set(hamburgerLines[2], { rotate: 0, y: 0 });
        }
      });
    });

    // Cleanup on page transitions
    document.addEventListener(
      "astro:before-swap",
      () => {
        if (isOpen) {
          isOpen = false;
          document.body.style.overflow = "";
          menu.classList.add("hidden");
        }
      },
      { once: true },
    );
  }

  document.addEventListener("astro:page-load", setupHeaderServices);
</script>

<style>
  .nav-phone-link:hover {
    color: var(--color-queens-secondary-light);
  }
</style>
