---
const {
    message = "Get a FREE Wheel Alignment when you buy 4 new tires!",
    mobileMessage = "FREE Alignment When You Buy 4 Tires",
    ctaText = "Shop Tires Now",
    href = "/buy-new-tires",
    class: className = "",
} = Astro.props;
---

<div
    id="AnnouncementBarWrapper"
    class:list={["w-full overflow-hidden h-0", className]}
    style="height: 0;"
>
    <div
        id="AnnouncementBar"
        class="relative w-full !bg-amber-50 border-b border-yellow-200/50"
    >
        <div class="w-full px-4 py-1.5 sm:px-6 lg:px-8 relative">
            <div
                class="flex flex-row items-center justify-center gap-2 sm:gap-4 text-center pr-8"
            >
                <div class="flex items-center gap-2">
                    <p
                        class="text-sm font-medium !text-yellow-900 tracking-wide"
                    >
                        <span class="hidden sm:inline">{message}</span>
                        <span class="inline sm:hidden">{mobileMessage}</span>
                    </p>
                </div>

                <a
                    href={href}
                    data-astro-reload
                    class="group inline-flex items-center gap-1.5 text-sm font-bold !text-yellow-900 hover:!text-yellow-700 transition-colors duration-200"
                >
                    <span class="hidden sm:inline">
                        {ctaText}
                    </span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4 arrow-pulse"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="#0a79c8"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="M5 12h14"></path>
                        <path d="m12 5 7 7-7 7"></path>
                    </svg>
                </a>
            </div>

            {/* Close Button */}
            <button
                id="AnnouncementBarClose"
                type="button"
                aria-label="Close announcement"
                class="absolute right-2 top-1/2 -translate-y-1/2 p-1.5 rounded-full text-yellow-800/60 hover:text-yellow-900 hover:bg-yellow-200/50 transition-colors duration-200"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        </div>

        {/* Subtle shine effect */}
        <div
            class="absolute inset-0 pointer-events-none bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full animate-[shimmer_3s_infinite]"
        >
        </div>
    </div>
</div>

<style>
    @keyframes pulse-arrow {
        0%,
        100% {
            transform: translateX(0);
        }
        50% {
            transform: translateX(4px);
        }
    }

    .arrow-pulse {
        animation: pulse-arrow 2s ease-in-out infinite;
    }
</style>

<script>
    import { gsap } from "gsap";

    function initAnnouncementBar() {
        const wrapper = document.getElementById("AnnouncementBarWrapper");
        const bar = document.getElementById("AnnouncementBar");
        const closeBtn = document.getElementById("AnnouncementBarClose");
        const headerWrapper =
            document.getElementById("header-wrapper") ||
            document.getElementById("header-wrapper-services");

        if (!wrapper || !bar) return;

        // Check for cookie
        const isDismissed = document.cookie
            .split("; ")
            .find((row) => row.startsWith("announcement-dismissed="));

        if (isDismissed) {
            wrapper.style.display = "none";
            return;
        }

        // Open function
        const openBar = () => {
            // Get the exact height
            const height = bar.offsetHeight;

            const tl = gsap.timeline({
                defaults: { ease: "power4.out", duration: 1.2 },
            });

            tl.to(wrapper!, { height: height }); // Animate bar height

            // Sync header wrapper if it exists and is not parent
            if (headerWrapper && !headerWrapper.contains(wrapper)) {
                tl.to(headerWrapper, { top: height }, "<");
            }
        };

        // Close function
        const closeBar = () => {
            const tl = gsap.timeline({
                defaults: { ease: "power4.out", duration: 1.2 },
                onComplete: () => {
                    wrapper!.style.display = "none";
                },
            });

            tl.to(wrapper!, { height: 0 });

            // Sync header wrapper
            if (headerWrapper && !headerWrapper.contains(wrapper)) {
                tl.to(headerWrapper, { top: 0 }, "<");
            }

            // Set cookie
            const date = new Date();
            date.setTime(date.getTime() + 7 * 24 * 60 * 60 * 1000);
            document.cookie =
                "announcement-dismissed=true; expires=" +
                date.toUTCString() +
                "; path=/";
        };

        // Auto-open after delay
        setTimeout(() => {
            openBar();
        }, 1000);

        // Event Listeners
        if (closeBtn) {
            closeBtn.addEventListener("click", closeBar);
        }

        // Handle Resize to adjust height assignment if needed
        window.addEventListener("resize", () => {
            if (wrapper.offsetHeight > 0) {
                gsap.set(wrapper, { height: "auto" });
            }
        });
    }

    // Initialize
    initAnnouncementBar();
    document.addEventListener("astro:page-load", initAnnouncementBar);
</script>
