</footer>

<script>
  import gsap from "gsap";

  function initFooterTicker() {
    const wrap = document.getElementById("footer-ticker-wrap");
    if (!wrap) return;

    // Get all ticker items and duplicate them for seamless loop
    const items = wrap.querySelectorAll(".footer-ticker-text");
    if (items.length === 0) return;

    // Clone all items and append to wrapper for seamless loop
    items.forEach((item) => {
      const clone = item.cloneNode(true);
      wrap.appendChild(clone);
    });

    // Calculate the width of the original set (first half)
    const totalWidth = wrap.scrollWidth / 2;

    // Create seamless infinite animation (simple approach - no modifiers)
    gsap.to(wrap, {
      x: -totalWidth,
      duration: 21,
      ease: "none",
      repeat: -1,
    });
  }

  // Init on page load and View Transitions
  document.addEventListener("astro:page-load", initFooterTicker);
  if (document.readyState !== "loading") {
    initFooterTicker();
  }
</script>

<style>
  .site-footer {
    background: #000000;
    color: #9ca3af;
    padding: 4rem 0 0;
    position: relative;
    z-index: 50;
    overflow: hidden;
  }

  .footer-container {
    max-width: 90rem;
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  @media (min-width: 1024px) {
    .footer-container {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }

  /* Grid Layout - 4 Columns on Large Screens */
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    margin-bottom: 4rem;
  }

  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr 1fr; /* First column slightly wider for about text */
      gap: 2rem;
    }
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  /* Logo & About */
  .footer-logo {
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .footer-logo-img {
    height: 2.5rem;
    width: auto;
    object-fit: contain;
  }

  .footer-logo-text {
    color: #ffffff;
    font-weight: 800;
    font-size: 1.75rem;
    letter-spacing: -0.02em;
    font-family: var(--font-display);
    text-transform: uppercase;
  }

  .footer-about {
    font-size: 0.9375rem;
    color: #9ca3af;
    line-height: 1.6;
    max-width: 320px;
    margin: 0;
  }

  /* Social Icons */
  .footer-socials {
    display: flex;
    gap: 0.75rem;
    margin-top: 2rem;
  }

  .footer-premium-link {
    color: #cbd5e1 !important; /* Premium Silver/Slate */
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }

  .footer-premium-link:hover {
    color: var(
      --color-queens-secondary-light
    ) !important; /* Premium subtle blue shade */
  }

  .hot-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: #ff5722 !important; /* Vivid Fire Orange */
    color: #ffffff !important;
    font-size: 10px;
    font-weight: 950;
    padding: 2px 6px;
    border-radius: 4px;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 0 15px rgba(255, 87, 34, 0.6);
    animation: hot-pulse 2s infinite ease-in-out;
    vertical-align: middle;
    margin-left: 4px;
  }

  @keyframes hot-pulse {
    0% {
      transform: scale(1);
      box-shadow: 0 0 10px rgba(255, 87, 34, 0.5);
    }
    50% {
      transform: scale(1.1);
      box-shadow: 0 0 20px rgba(255, 87, 34, 0.8);
    }
    100% {
      transform: scale(1);
      box-shadow: 0 0 10px rgba(255, 87, 34, 0.5);
    }
  }

  /* Social Links Integration */
  .footer-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    color: #cbd5e1 !important;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .footer-social-link:hover {
    background: rgba(108, 175, 222, 0.1); /* queens-secondary-light glow bg */
    color: var(--color-queens-secondary-light) !important;
    border-color: rgba(108, 175, 222, 0.4);
    transform: translateY(-3px);
  }

  .social-icon {
    width: 1.1rem;
    height: 1.1rem;
  }

  /* Headings & Links */
  .footer-heading {
    color: #ffffff;
    font-size: 0.875rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-links a {
    font-size: 0.9375rem;
    color: #9ca3af;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .footer-links a:hover {
    color: #ffffff;
  }

  /* Address Column */
  .footer-address {
    font-style: normal;
    font-size: 0.9375rem;
    color: #9ca3af;
    line-height: 1.6;
  }

  .footer-address strong {
    display: block;
    color: #ffffff;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .footer-phone {
    color: #ffffff;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-phone:hover {
    color: #0a79c8;
  }

  /* Bottom Bar */
  .footer-bottom {
    padding-top: 2rem;
    padding-bottom: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.08); /* Dark subtle border */
    display: flex;
    flex-direction: column-reverse;
    gap: 1.5rem;
    align-items: center;
    justify-content: space-between;
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      gap: 2rem;
    }
  }

  .footer-bottom p {
    margin: 0;
    color: #6b7280;
  }

  .footer-legal {
    display: flex;
    gap: 2rem;
  }

  .footer-legal a {
    color: #6b7280;
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-legal a:hover {
    color: #ffffff;
  }

  /* Ticker Section */
  .footer-ticker-container {
    margin-top: 2rem;
    padding: 2rem 0;
    width: 100%;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    overflow: hidden;
  }

  .footer-ticker-wrap {
    display: flex;
    white-space: nowrap;
    will-change: transform;
  }

  .footer-ticker-text {
    font-family: var(--font-display);
    font-size: clamp(4rem, 18vw, 180px);
    font-weight: 800;
    line-height: 0.9;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 0.15em;
    user-select: none;
    pointer-events: none;
    letter-spacing: -0.02em;
    flex-shrink: 0;
    padding-right: 0.3em;
  }

  .ticker-separator {
    color: rgba(255, 255, 255, 0.15);
    font-size: 0.5em;
    margin: 0 0.2em;
  }

  @media (min-width: 1024px) {
    .footer-ticker-text {
      font-size: 180px;
    }
  }
</style>
