---
import CtaButton from "./CtaButton.astro";

/**
 * NewTiresSlideshow - Premium section with tall vertical slideshow
 * Left: Vertical image slideshow, Right: Bold impactful content
 */

const slides = [
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 1.webp",
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 2.webp",
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 3.webp",
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 4.webp",
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 5.webp",
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 6.webp",
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 7.webp",
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 8.webp",
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 9.webp",
    "/images/Queens New Tires Slides/Queens Auto Services - New Tires Slide 10.webp",
];
---

<section id="new-tires-section" class="nts-section">
    <div class="nts-container">
        <!-- Left: Vertical Slideshow -->
        <div class="nts-slideshow-col">
            <div class="nts-slideshow">
                {
                    slides.map((src, index) => (
                        <img
                            src={src}
                            alt={`Premium Tires ${index + 1}`}
                            loading={index === 0 ? "eager" : "lazy"}
                            class={`nts-slide ${index === 0 ? "active" : ""}`}
                            data-index={index}
                        />
                    ))
                }
            </div>
        </div>

        <!-- Right: Premium Content -->
        <div class="nts-content-col">
            <div class="nts-content">
                <!-- Eyebrow -->
                <span class="nts-eyebrow">New Tire Selection</span>

                <!-- Main Headline - Large & Bold -->
                <h2 class="nts-headline">
                    Need new tires?<br />
                    Shop brands you trust<br />
                    <span class="nts-headline-accent">â€” installed today.</span>
                </h2>

                <!-- Subtext -->
                <p class="nts-subtext">
                    Browse Michelin, Bridgestone, Cooper & more. Professional
                    installation included. Buy 4 tires, get a <strong
                        >FREE alignment</strong
                    >.
                </p>

                <!-- CTA Button -->
                <div class="nts-cta">
                    <CtaButton
                        href="/buy-new-tires"
                        text="Shop Tires"
                        reload={true}
                    />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .nts-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 5rem 0;
        background-color: #fafafa;
    }

    :global(.dark) .nts-section {
        background-color: #09090b;
    }

    .nts-container {
        width: 100%;
        max-width: 1440px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        flex-direction: column;
        gap: 3.5rem;
        align-items: center;
    }

    @media (min-width: 1024px) {
        .nts-container {
            flex-direction: row;
            gap: 6rem;
            padding: 0 5rem;
            align-items: center;
        }
    }

    @media (min-width: 1280px) {
        .nts-container {
            gap: 8rem;
            padding: 0 6rem;
        }
    }

    /* ========================
       LEFT: VERTICAL SLIDESHOW
       ======================== */
    .nts-slideshow-col {
        flex-shrink: 0;
    }

    .nts-slideshow {
        position: relative;
        width: 320px;
        height: 427px; /* 3:4 ratio */
        overflow: hidden;
        border-radius: 0;
        box-shadow:
            0 30px 60px -15px rgba(0, 0, 0, 0.25),
            0 15px 30px -10px rgba(0, 0, 0, 0.15);
        background: #e2e8f0;
    }

    :global(.dark) .nts-slideshow {
        background: #1e293b;
        box-shadow:
            0 30px 60px -15px rgba(0, 0, 0, 0.5),
            0 15px 30px -10px rgba(0, 0, 0, 0.3);
    }

    @media (min-width: 768px) {
        .nts-slideshow {
            width: 380px;
            height: 507px;
        }
    }

    @media (min-width: 1280px) {
        .nts-slideshow {
            width: 420px;
            height: 560px;
        }
    }

    .nts-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        transition: opacity 1s ease-in-out;
    }

    .nts-slide.active {
        opacity: 1;
    }

    /* ========================
       RIGHT: PREMIUM CONTENT
       ======================== */
    .nts-content-col {
        flex: 1;
        display: flex;
        justify-content: center;
    }

    @media (min-width: 1024px) {
        .nts-content-col {
            justify-content: flex-start;
        }
    }

    .nts-content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        text-align: center;
        max-width: 560px;
    }

    @media (min-width: 1024px) {
        .nts-content {
            text-align: left;
            gap: 1.75rem;
        }
    }

    /* Eyebrow */
    .nts-eyebrow {
        display: inline-block;
        font-family: var(--font-body);
        font-size: 0.8125rem;
        font-weight: 700;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--color-queens-primary, #0a79c8);
    }

    :global(.dark) .nts-eyebrow {
        color: #38bdf8;
    }

    /* Headline - BIG & BOLD */
    .nts-headline {
        font-family: var(--font-display);
        font-size: clamp(2rem, 4.5vw, 3.25rem);
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -0.025em;
        margin: 0;
        color: #0f172a;
    }

    :global(.dark) .nts-headline {
        color: #f8fafc;
    }

    .nts-headline-accent {
        display: block;
        color: var(--color-queens-primary, #0a79c8);
        font-style: italic;
        font-weight: 700;
    }

    :global(.dark) .nts-headline-accent {
        color: #38bdf8;
    }

    /* Subtext */
    .nts-subtext {
        font-family: var(--font-body);
        font-size: 1.0625rem;
        line-height: 1.7;
        color: #64748b;
        margin: 0;
        max-width: 440px;
    }

    @media (min-width: 1024px) {
        .nts-subtext {
            font-size: 1.125rem;
        }
    }

    :global(.dark) .nts-subtext {
        color: #94a3b8;
    }

    .nts-subtext strong {
        color: #0f172a;
        font-weight: 700;
    }

    :global(.dark) .nts-subtext strong {
        color: #f1f5f9;
    }

    /* CTA */
    .nts-cta {
        padding-top: 0.5rem;
    }

    @media (min-width: 1024px) {
        .nts-cta {
            padding-top: 0.75rem;
        }
    }

    /* Center content elements on mobile */
    @media (max-width: 1023px) {
        .nts-eyebrow,
        .nts-subtext {
            margin-left: auto;
            margin-right: auto;
        }

        .nts-cta {
            display: flex;
            justify-content: center;
        }
    }
</style>

<script>
    let slideInterval: ReturnType<typeof setInterval> | null = null;

    function initNewTiresSection() {
        if (slideInterval) {
            clearInterval(slideInterval);
            slideInterval = null;
        }

        const section = document.getElementById("new-tires-section");
        if (!section) return;

        const slides = section.querySelectorAll<HTMLImageElement>(".nts-slide");
        if (!slides.length) return;

        let currentIndex = 0;
        const totalSlides = slides.length;

        function nextSlide() {
            slides[currentIndex].classList.remove("active");
            currentIndex = (currentIndex + 1) % totalSlides;
            slides[currentIndex].classList.add("active");
        }

        slideInterval = setInterval(nextSlide, 3500);
    }

    document.addEventListener("astro:page-load", initNewTiresSection);

    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initNewTiresSection);
    } else {
        initNewTiresSection();
    }

    document.addEventListener("astro:before-swap", () => {
        if (slideInterval) {
            clearInterval(slideInterval);
            slideInterval = null;
        }
    });
</script>
